Fds1 <- hgsilt_w1 * (DEPO_silt$wn1/d1)     # Flux for Hg in silt   kg(hg) * 1 d-1 --> kg d
Fds2 <- hgsilt_w2 * (DEPO_silt$wn2/d2)
Fds3 <- hgsilt_w3 * (DEPO_silt$wn3/d3)
Fds4 <- hgsilt_w4 * (DEPO_silt$wn4/d4)
