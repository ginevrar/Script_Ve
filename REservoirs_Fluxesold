dev.off()

Frs1<-hgsilt_s1*RESUS_silt$sn1/0.05     # Flux for Hg in silt, kg * 1 d-1 --> kg d-1
Frs2<-hgsilt_s2*RESUS_silt$sn2/0.05     # Flux fo
Frs3<-hgsilt_s3*RESUS_silt$sn3/0.05     #
Frs4<-hgsilt_s4*RESUS_silt$sn4/0.05     #
Frs5<-hgsilt_s5*RESUS_silt$sn5/0.05     #
Frs6<-hgsilt_s6*RESUS_silt$sc6/0.05     #
Frs7<-hgsilt_s7*RESUS_silt$sc7/0.05     #
Frs8<-hgsilt_s8*RESUS_silt$ss8/0.05     #
Frs9<-hgsilt_s9*RESUS_silt$ss9/0.05     #
Frs10<-hgsilt_s10*RESUS_silt$ss10/0.05

Frsa1<-hgsand_s1*RESUS_sand$sn1/0.05     #
Frsa2<-hgsand_s2*RESUS_sand$sn2/0.05     #
Frsa3<-hgsand_s3*RESUS_sand$sn3/0.05     #
Frsa4<-hgsand_s4*RESUS_sand$sn4/0.05     #
Frsa5<-hgsand_s5*RESUS_sand$sn5/0.05     #
Frsa6<-hgsand_s6*RESUS_sand$sc6/0.05     #
Frsa7<-hgsand_s7*RESUS_sand$sc7/0.05     #
Frsa8<-hgsand_s8*RESUS_sand$ss8/0.05     #
Frsa9<-hgsand_s9*RESUS_sand$ss9/0.05     #
Frsa10<-hgsand_s10*RESUS_sand$ss10/0.05

Frp1<-hgpom_s1*RESUS_POM$sn1/0.05     #
Frp2<-hgpom_s2*RESUS_POM$sn2/0.05     # Flux for Hg in POM, ng/l or ug/m3*m d-1 --> ugm2d
Frp3<-hgpom_s3*RESUS_POM$sn3/0.05    # Flux for Hg in POM, ng/l or ug/m3*m d-1 --> ugm2d
Frp4<-hgpom_s4*RESUS_POM$sn4/0.05
Frp5<-hgpom_s5*RESUS_POM$sn5/0.05     #
Frp6<-hgpom_s6*RESUS_POM$sc6/0.05     #
Frp7<-hgpom_s7*RESUS_POM$sc7/0.05     #
Frp8<-hgpom_s8*RESUS_POM$ss8/0.05     #
Frp9<-hgpom_s9*RESUS_POM$ss9/0.05     #
Frp10<-hgpom_s10*RESUS_POM$ss10/0.05  #

R1 = Frs1 + Frsa1 + Frp1
R2 = Frs2 + Frsa2 + Frp2
R3 = Frs3 + Frsa3 + Frp3
R4 = Frs4 + Frsa4 + Frp4
R5 = Frs5 + Frsa5 + Frp5
R6 = Frs6 + Frsa6 + Frp6
R7 = Frs7 + Frsa7 + Frp7
R8 = Frs8 + Frsa8 + Frp8
R9 = Frs9 + Frsa9 + Frp9
R10= Frs10+ Frsa10+ Frp10

TotD<-(D1+D2+D3+D4+D5+D6+D7+D8+D9+D10)
TotR<-R1+R2+R3+R4+R5+R6+R7+R8+R9+R10

N1<-D1-R1;N2<-D2-R2;N3<-D3-R3;N4<-D4-R4;N5<-D5-R5;
N6<-D6-R6;N7<-D7-R7; N8<-D8-R8;N9<-D9-R9; N10<-D10-R10

Ntot<-N1+N2+N3+N4+N5+N6+N7+N8+N9+N10

hg_sed_reservoir<-hg_silt_sed_tot+hg_pom_sed_tot+hg_sand_sed_tot+hg_doc_sed_tot+hg_aq_sed_tot
hg_wat_reservoir<-hg_silt_wat_tot+hg_pom_wat_tot+hg_sand_wat_tot+hg_doc_wat_tot+hg_aq_wat_tot

head(TotD*365)
head(hg_wat_reservoir)
head(TotR*365)

