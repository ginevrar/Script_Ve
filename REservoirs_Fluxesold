d1<-1.26; d2<-0.78; d3<-3.35; d4<-0.64; d5<-1.03; d6<-1.64; d7<-1.84; d8<-0.89; d9<-0.69; d10<-1.71

# partitioning of hg
ksilt<-1.5*10^5; kpom<-2*10^5; kdoc<-10000
partden1=1+0.000001*((ksilt*silts)+(sands)+(kpom*POMs)+(kdoc*3.19))
faq=1./partden1
fsilt=(0.000001*ksilt*silts)/partden1
fsand=(0.000001*1*sands)/partden1
fpom= (0.000001*kpom*POMs)/partden1
fdoc=(0.000001*kdoc*3.19)/partden1
head(fsilt+fpom+fsand+faq+fdoc)

reservoir_hg_w1<- v1_w * hg$wn1/10^9     # ug/m3(w+s) *vol(m3) = ug(hg)/10^9 = kg(hg)
reservoir_hg_w2<- v2_w * hg$wn2/10^9
reservoir_hg_w3<- v3_w * hg$wn3/10^9
reservoir_hg_w4<- v4_w * hg$wn4/10^9
reservoir_hg_w5<- v5_w * hg$wn5/10^9
reservoir_hg_w6<- v6_w * hg$wc6/10^9
reservoir_hg_w7<- v7_w * hg$wc7/10^9
reservoir_hg_w8<- v8_w * hg$ws8/10^9
reservoir_hg_w9<- v9_w * hg$ws9/10^9
reservoir_hg_w10<-v10_w* hg$ws10/10^9

reservoir_hgp_w1 <- v1_w * Phgs$wn1/10^9   # ug/m3(w+s) *vol(m3) = ug(hg)/10^9 = kg(hg)
reservoir_hgp_w2 <- v2_w * Phgs$wn2/10^9
reservoir_hgp_w3 <- v3_w *Phgs$wn3/10^9
reservoir_hgp_w4 <- v4_w * Phgs$wn4/10^9
reservoir_hgp_w5 <- v5_w * Phgs$wn5/10^9
reservoir_hgp_w6 <- v6_w * Phgs$wc6/10^9
reservoir_hgp_w7 <- v7_w * Phgs$wc7/10^9
reservoir_hgp_w8 <- v8_w * Phgs$ws8/10^9
reservoir_hgp_w9 <- v9_w * Phgs$ws9/10^9
reservoir_hgp_w10<-v10_w*Phgs$ws10/10^9

hgsilt_w1<-reservoir_hg_w1*fsilt$wn1    ##  kg(hg) adsorbito al silt
